# SPDX-License-Identifier: GPL-3.0-or-later

# vi: ft=sh

echo "🥝 devkit: lint..."

set -euo pipefail

echo "🥝 devkit: running clang-tidy..."

clang-tidy -p .devkit $(get_files)

echo "🥝 devkit: running clang-format..."

clang-format --dry-run --Werror $(get_files)

echo "🥝 devkit: lint complete."
