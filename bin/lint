# vi: ft=sh

echo "🥝 devkit: lint..."

set -euo pipefail

inputFiles=${@:1:$#}

echo "🥝 devkit: running clang-tidy..."

clang-tidy -p compile_commands.devkit.json $inputFiles

echo "🥝 devkit: running clang-format..."

clang-format --dry-run --Werror $inputFiles

echo "🥝 devkit: lint complete."
